            <div class="image" align="center">



              <img src=<%= image_path('attch.png') %> title=<%=f.picture_file_name %> width=100px>
            </div>
            <div class="file-name">
              <%= f.picture_file_name %>
              <%= link_to '',[f.ware,f], class: "fa fa-trash pull-right fa-2x", method: :delete, data: { confirm: 'Are you sure?' } %>
            </div>
          </a>
        </div>
      </div>

  <% end %>

  <div class="ibox-content">

    <%= form_for([@ware,@ware.warepictures.build],:html => {:class=>'form-horizontal m-t',id:"signupForm",:multipart => true}) do |f| %>


        <div class="form-group">
          <label class="col-sm-3 control-label">选择附件：</label>
          <div class="col-sm-3">
            <%= f.file_field :picture ,class:"form-control",id:'fj_att'%>
          </div>
        </div>

        <div class="form-group">
          <label class="col-sm-3 control-label"></label>
          <div>
            <button class="btn btn-w-m btn-success mylink pull-left" type="submit" id="fj_submit">上传附件</button>
            <i class="pull-left">&nbsp;</i>
            <div id="fj_alert" class="alert alert-danger text-center col-sm-2 " style="display: none;padding-top: 8px;padding-bottom: 0px;">
              <label id="fj_alert_lab"></label></a>
            </div>
          </div>
        </div>
        </div>
    <% end %>
