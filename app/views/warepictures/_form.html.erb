<script>
    $(document).ready(function () {
        $('.file-box').each(function () {
            animationHover(this, 'pulse');
        });
        $('#fj_submit').click(function(){
            if($('#fj_att').val()=='')
            {
                $('#fj_alert_lab').html('附件不能为空！');
                $('#fj_alert').show();

                return false;
            }
        });
    });
</script>
