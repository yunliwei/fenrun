<%= render 'layerbegin' %>

<div class="col-lg-12">
  <div class="ibox float-e-margins">
    <div class="ibox-title">
      <h2 class="text-center">商城基本信息</h2>
      <br>
      <br>
    </div>



    <div class="ibox-content">
      <table class="table table-hover table-bordered text-center">
        <thead>
        <tr>
          <th class="text-center">商城名称</th>
          <th class="text-center">图片</th>
          <th class="text-center">商城简介</th>
          <th class="text-center">联系电话</th>
          <th class="text-center">店招</th>
          <th class="text-center">客服</th>
          <th class="text-center">操作</th>
        </tr>
        </thead>
        <tbody>

        <% @malls.each do |m| %>
            <tr>
              <td><%= m.mallname %></td>
              <td><%= m.phonenumber %></td>
              <td><%= m.descripte %></td>
              <td><%= m.telephone %></td>
              <td><%= m.shorerecruit %></td>
              <td><%= m.custimerservic %></td>
              <td>
                <%= link_to '编辑', edit_mall_path(m),class:'fa fa-edit' %>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
               </td>
            </tr>
        <% end %>
        </tbody>
      </table>





      <%= link_to "新增", new_mall_path,class: "btn btn-w-m btn-success mylink pull-right" %>
      <br>

    </div>

  </div>
</div>












<%= render 'layerend' %>