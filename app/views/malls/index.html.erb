<%= render 'layerbegin' %>

<div class="col-lg-12">
  <div class="ibox float-e-margins">
    <div class="ibox-title">
      <h2 class="text-center">商城基本信息</h2>
      <br>
      <br>
    </div>



    <div class="ibox-content">
      <table class="table table-hover table-bordered text-center">
        <thead>
        <tr>
          <th class="text-center">商城名称</th>
          <th class="text-center">商城logo</th>
          <th class="text-center">商城简介</th>
          <th class="text-center">联系电话</th>
          <th class="text-center">店招</th>
          <th class="text-center">客服</th>
          <th class="text-center">操作</th>
        </tr>
        </thead>
        <tbody>

        <% @malls.each do |malls| %>
            <tr>
              <td><%= malls.mallname %></td>
              <td><%= image_tag malls.malllogo.url,Height:200%></td>
              <td><%= malls.descripte %></td>
              <td><%= malls.telephone %></td>
              <td><%= malls.storerecruit %></td>
              <td><%= malls.customerservice %></td>
              <td>
                <%= link_to '修改', edit_mall_path(malls),class:'fa fa-edit' %>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                <%= link_to '删除', malls,class:'fa fa-trash', method: :delete, data: { confirm: 'Are you sure?' } %>

                </td>

            </tr>
        <% end %>
        </tbody>
      </table>





      <%= link_to "新增", new_mall_path,class: "btn btn-w-m btn-success mylink pull-right" %>
      <br>

    </div>

  </div>
</div>












<%= render 'layerend' %>