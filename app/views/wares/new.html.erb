<%= render 'layerbegin' %>

<div class="ibox-content form-horizontal m-t">

  <%= form_for(@ware,:html => {:class=>'form-horizontal m-t',:multipart => true}) do |f| %>
      <div class="form-group">
        <label class="col-sm-2 control-label">商品名称：</label>
        <div class="col-sm-3">
          <%= f.text_field :ware,class:"form-control" %>
        </div>
      </div>

      <div class="form-group">
        <label class="col-sm-2 control-label">分类：</label>
        <div class="input-group">
          <select id="select" data-placeholder="选择类型" class="chosen-select" multiple style="width:300px;" tabindex="4">
            <option value="">请选择类型</option>
            <% @class.each do |cla| %>
                <option value=<%=cla.id %> hassubinfo="true"><%= cla.classname %></option>
  <% end %>


          </select>
        </div>
      </div>

      <div class="form-group">
        <label class="col-sm-2 control-label">原价：</label>
        <div class="col-sm-3">
          <%= f.text_field :price,class:"form-control" %>
        </div>
      </div>

      <div class="form-group">
        <label class="col-sm-2 control-label">现价：</label>
        <div class="col-sm-3">
          <%= f.text_field :discountprice,class:"form-control" %>
        </div>
      </div>

      <div class="form-group">
        <label class="col-sm-2 control-label">销量：</label>
        <div class="col-sm-3">
          <%= f.text_field :salevolume,class:"form-control" %>
        </div>
      </div>

      <div class="form-group">
        <label class="col-sm-2 control-label">文字描述：</label>
        <div class="col-sm-3">
          <%= f.text_field :describe,class:"form-control" %>
        </div>
      </div>

      <div class="form-group">
        <label class="col-sm-2 control-label">库存：</label>
        <div class="col-sm-3">
          <%= f.text_field :stock,class:"form-control" %>
        </div>
      </div>

      <div class="form-group">
        <label class="col-sm-2 control-label">运费：</label>
        <div class="col-sm-3">
          <%= f.text_field :freight,class:"form-control" %>
        </div>
      </div>

      <div class="form-group">
        <label class="col-sm-2 control-label">折扣：</label>
        <div class="col-sm-3">
          <%= f.text_field :discount,class:"form-control" %>
        </div>
      </div>

      <div class="form-group">
        <label class="col-sm-2 control-label">基础价：</label>
        <div class="col-sm-3">
          <%= f.text_field :baseprice,class:"form-control" %>
        </div>
      </div>

      </div>
      <%= f.submit '确定',class: "btn btn-w-m btn-success mylink pull-right",id:'smt','data-no-turbolink'=>true %>
      <br>
  <% end %>
</div>
<%= render 'layerend' %>
<script>


    var config = {
      '.chosen-select': {},
      '.chosen-select-deselect': {
        allow_single_deselect: true
      },
      '.chosen-select-no-single': {
        disable_search_threshold: 10
      },
      '.chosen-select-no-results': {
        no_results_text: 'Oops, nothing found!'
      },
      '.chosen-select-width': {
        width: "95%"
      }
    }
    for (var selector in config) {
      $(selector).chosen(config[selector]);
    }
    $(document).ready(function () {
      $('#smt').click(function(){

          alert($('#select').value)


      });

    });
</script>
