<%= render 'layerbegin' %>
<div class="ibox-content form-horizontal m-t">
  <h3>平台设置</h3>
  <%= form_for(@setting,:html => {:class=>'form-horizontal m-t',:multipart => true}) do |f| %>
      <br>
      <br>
      <div class="form-group">
        <label class="col-lg-5 control-label">消费基数</label>
        <div class="col-sm-3">
          <%= f.text_field :consumebase %>
        </div>
      </div>
      <div class="form-group">
        <label class="col-lg-5 control-label">会员可分比</label>
        <div class="col-sm-3">
          <%= f.text_field :memberratio %>
        </div>
      </div>
      <div class="form-group">
        <label class="col-lg-5 control-label">代理可分比</label>
        <div class="col-sm-3">
          <%= f.text_field :agentratio %>
        </div>
      </div>
      <div class="form-group">
        <label class="col-lg-5 control-label">推荐人可分比</label>
        <div class="col-sm-3">
          <%= f.text_field :refereeratio %>
        </div>
      </div>
      <div class="form-group">
        <label class="col-lg-5 control-label">用户最低限额</label>
        <div class="col-sm-3">
          <%= f.text_field :consumemin %>
        </div>
      </div>
      <div class="form-group">
        <label class="col-lg-5 control-label">用户最高限额</label>
        <div class="col-sm-3">
          <%= f.text_field :consumemax %>
        </div>
      </div>
      <div class="form-group">
        <label class="col-lg-5 control-label">用户返现比</label>
        <div class="col-sm-3">
          <%= f.text_field :consumecash %>
        </div>
      </div>
      <div class="form-group">
        <label class="col-lg-5 control-label">提现最低限额</label>
        <div class="col-sm-3">
          <%= f.text_field :withdrawmin %>
        </div>
      </div>
      <div class="form-group">
        <label class="col-lg-5 control-label">提现最高限额</label>
        <div class="col-sm-3">
          <%= f.text_field :withdrawmax %>
        </div>
      </div>
      <div class="form-group">
        <label class="col-lg-5 control-label">提现比</label>
        <div class="col-sm-3">
          <%= f.text_field :withdrawratio %>
        </div>
      </div>
      <%= f.submit '确定',class: "btn btn-w-m btn-success mylink pull-right",id:'smt' %>
      <% end %>
      </div>
      <%= link_to '返回', settings_path %>
  <%= render 'layerend' %>